<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.phobos.logoquizzer">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.phobos.logoquizzer.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.phobos.logoquizzer.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
        <activity
                android:name="com.phobos.logoquizzer.LogoListActivity"
                android:label="@string/title_activity_logolist">
        </activity>
        <activity
                android:name="com.phobos.logoquizzer.AnswerActivity"
                android:label="@string/title_activity_answer"
                android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>
